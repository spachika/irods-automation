{

    "id": "file:///var/lib/irods/configuration_schemas/v3/hosts_config.json",

    "$schema": "http://json-schema.org/draft-04/schema#",

    "type": "object",

    "properties": {

        "host_entries": {

            "type": "array",

            "items": {

                "type": "object",

                "properties": {

                    "address_type": {"enum": ["local","remote"]},

                    "addresses": {

                        "type": "array",

                        "items": {

                            "type": "object",

                            "properties": {

                                "address": "localhost"

                            },

                            "required": ["address"]

                        }

                    }

                },

                "required": ["address_type","addresses"]

            }

        }

    },

    "required": ["host_entries"]

}